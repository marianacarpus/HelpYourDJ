<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".AboutAppActivity">

    <ImageView
        android:id="@+id/imagegif"
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/about" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help Your DJ App"
        android:gravity="center"
        android:textColor="#ffffff"
        android:shadowColor="@android:color/black"
        android:shadowDx="0.0"
        android:shadowDy="0.0"
        android:shadowRadius="15"
        android:drawablePadding="10dp"

        android:drawableTint="@android:color/white"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:textSize="30sp"
        android:id="@+id/txttitleabout"/>

    <TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:gravity="left"
    android:layout_height="75dp"
        android:textSize="15sp"
        android:layout_marginTop="30sp"
    android:text="    This application is in constantly developing
\n \n       Keep in touch with next updates"
    android:textColor="#d3d3d3" />

    <TextView
        android:id="@+id/textView7"
        android:textColor="#fff"
        android:layout_marginTop="140dp"
        android:gravity="bottom|right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="\@Copyright: Carpus Mariana " />

</LinearLayout>