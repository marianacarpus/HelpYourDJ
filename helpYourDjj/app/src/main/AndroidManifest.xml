<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.music.helpyourdj">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/start"
        android:label="@string/app_name"
        android:roundIcon="@drawable/start"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutAppActivity"></activity>
        <activity android:name=".ChartMusicActivity" />
        <activity android:name=".AdminPubsActivity" />
        <activity android:name=".Music" />
        <activity android:name=".PubsActivity" />
        <activity
            android:name=".UserAppActivity"
            android:label="@string/title_activity_user_app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StartApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity android:name=".Register" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>